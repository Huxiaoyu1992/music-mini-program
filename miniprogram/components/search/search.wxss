.container {
  display: flex;
  align-items: center;
  position: relative;
  margin-left: 20rpx;
}

.find {
  position: absolute;
  top: 50%;
  transform: translate(16rpx, -50%);
  color: #9f9f9f;
}

.bar {
  flex: 1;
  height: 68rpx;
  border-radius: 50px;
  font-size: 28rpx;
  background-color: #f5f5f5;
  padding-left: 60rpx;
}

.container .search {
  line-height: 68rpx;
  padding: 0 34rpx;
  background-color: #d4237a;
  color: #fff;
  margin-left: 20rpx;
  font-size: 24rpx;
}

.in-bar {
  color: #999;
}