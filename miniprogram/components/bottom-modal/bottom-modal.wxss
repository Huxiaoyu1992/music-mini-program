/* components/bottom-modal/bottom-modal.wxss */
.modal {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
  text-align: center;
  background-color: rgba(0, 0, 0, .6);
}

.panel {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  background-color: #f8f8f8;
}

.cancel {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  padding: 20rpx; /*为了增加点击的区域*/
}