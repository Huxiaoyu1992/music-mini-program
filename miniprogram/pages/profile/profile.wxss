/* pages/profile/profile.wxss */
.header {
  background-color: rgba(212, 35, 122, 0.4);
  height: 480rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.avatar-box {
  width: 220rpx;
  height: 230rpx;
  display: block;
  overflow: hidden;
  border: 6rpx solid #fff;
  border-radius: 50%;
}

.name {
  font-size: 36rpx;
  margin-top: 20rpx;
  font-weight: 400;
}

/* 导航 */

.nav {
  overflow: hidden;
  padding-right: 30rpx;
  padding-left: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
  display: block;
  background-color: #fff;
}

.nav-item {
  padding-right: 90rpx;
  position: relative;
  display: flex;
  padding: 0 30rpx;
  min-height: 100rpx;
  background-color: #fff;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.content {
  font-size: 30rpx;
  line-height: 1.6em;
  flex: 1;
}

.img {
  display: inline-block;
  margin-right: 10rpx;
  width: 1.6em;
  height: 1.6em;
  vertical-align: middle;
  max-width: 100%;
}

.text {
  color: #808080;
}

.content .iconfont {
  color: #d4237a;
  font-weight: 600;
  margin-right: 30rpx;
}

.content .icon-xiangyou {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 30rpx;
  bottom: 0;
  color: #808080;
  font-size: 28rpx;
}
