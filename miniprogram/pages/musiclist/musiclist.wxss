/* pages/musiclist/musiclist.wxss */
.music-container {
  height: 400rpx;
  filter: blur(40rpx); /* blur：创建高速度移动效果，即模糊效果 */
  opacity: 0.4;
}

.music-mask {
  position: absolute;
  width: 100%;
  height: 400rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}

.music-info {
  display: flex;
  align-items: center;
  position: absolute;
  top: 0;
  left: 0;
  padding: 20rpx;
}

.cover-img {
  width: 360rpx;
  height: 360rpx;
}

.music-list {
  flex-flow: 1;
  padding: 20rpx;
  width: 50%;
}

.title{
  font-size: 34rpx;
  color: #FFF;
  text-shadow: 1px 0 0 #222;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tags {
  font-size: 28rpx;
  color: rgb(39, 5, 21);
  margin: 10rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}