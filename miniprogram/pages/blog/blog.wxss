/* pages/blog/blog.wxss */
.header {
  display: flex;
  width: 100%;
  height: 100rpx;
  align-items: center;
  padding: 0 20rpx;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  box-sizing: border-box;
}
.icon-pinglun {
  font-size: 48rpx;
}

.publish-container {
  width: 68rpx;
  height: 68rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-container {
  flex: 1;
}

/* 中间评论区 */
.blog-list {
  margin-top: 120rpx;
}

.blog-panel {
  margin-bottom: 20rpx;
  box-sizing: border-box;
}